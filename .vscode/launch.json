    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env":
            {
                "HYDRA_FULL_ERROR": "1"
            },
        },
        {
            "name": "Python Debugger: Experiment-Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "args": "-m hparams_search=cnn_layers_search_optuna experiment=find_cnn_layers",
            "envFile": "${workspaceFolder}/.env",
            "env":
            {
                "HYDRA_FULL_ERROR": "1"
            },
        }
    ]
}
